version: "3.9"

services:
  wordpress:
    image: wordpress:latest
    volumes:
      - wordpress_data:/var/www/html
    ports:
      - "80:80"
    restart: always
    environment:
      WORDPRESS_DB_HOST: {{ rdshost }}:3306
      WORDPRESS_DB_USER: {{ dbuser }}
      WORDPRESS_DB_PASSWORD: {{ wordpress_user_password }}
      WORDPRESS_DB_NAME: {{ wpdb }}
volumes:
  wordpress_data: {}